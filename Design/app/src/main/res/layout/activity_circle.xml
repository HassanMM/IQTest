<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodbackground"
    tools:context="com.example.roqa7hmed.design.Circle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageButton
            android:id="@+id/backButtonLevels"
            android:layout_width="32dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/arrowback"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="80dp"
            android:text="Please Choose a level: "
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:textSize="25dp" />

        <Button
            android:id="@+id/level1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/wood"
            android:gravity="center"
            android:text="level 1"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/level2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@id/level1"
            android:layout_marginTop="10dp"
            android:background="@drawable/wood"
            android:gravity="center"
            android:text="level 2"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/level3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/level2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/wood"
            android:gravity="center"
            android:text="level 3"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/level4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/level3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/wood"
            android:gravity="center"
            android:text="level 4"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/level5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/level4"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/wood"
            android:gravity="center"
            android:text="level 5"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>